 <header class="header">
    <nav class="header-nav group">
      <% if signed_in? %>
        <% user_home = "/#/users/#{current_user.id}" %>
        <h1 class="header-logo">
          <a href=<%= user_home %>>Songstorm</a>
        </h1>
      <% else %>
        <% non_user_home = "/session/new" %>
        <h1 class="header-logo">
          <a href=<%= new_session_url %>>Songstorm</a>
        </h1>
      <% end %>

      <form class="search-bar">
      <input type="text" class="query" placeholder="Search songs, artists, albums" value="">
      <input type="submit" class="search">
      </form>

      <ul class="header-list group">
        <% if signed_in? %>
          <li>
            <a href="#/songs/new">Upload</a>
          </li>
          <li>
            <%= link_to "Home", "/#/users/#{current_user.id}" %>
          </li>
          <li>
            <a>
              <form class="sign_out" action="<%= session_url %>" method="post">
                <%= auth_token_input %>
                <input name="_method" type="hidden" value="delete">
                <input class="sign-out" type="submit" value="Sign Out">
              </form>
            </a>
          </li>
        <% else %>
          <li>
            <%= link_to "Sign In", new_session_url %>
          </li>
          <li>
            <%= link_to "Sign Up", new_user_url %>
          </li>
        <% end %>

      </ul>
    </nav>
  </header>









  <footer class="footer group">
    <small class="footer-copy">
      &copy; 20X6 Sai K. Inc...I Have Laywers
    </small>
    <ul class="footer-links group">
      <% if signed_in? %>
        <li><a href="/#/users/<%= current_user.id %>">Home</a></li>
      <% end %>
      <li><a href="#">About</a></li>
      <li><a href="#">Privacy(jk it's a myth)</a></li>
    </ul>
  </footer>

  <div class="modal is-open">
  
    <form class="modal-form users-form" action="<%= session_url %>" method="post">
      <%= auth_token_input %>

      <span class="modal-close js-modal-close">&times;</span>
  
      <h1>Welcome</h1>
  
      <p>Please sign in to continue.</p>
  
      <div class="input">
        <label>
          <span>Username</span>
          <input type="text" name="user[username]" value="">
        </label>
      </div>
      
      <div class="input">
        <label>
          <span>Password</span>
          <input type="password" name="user[password]" value="">
      </label>
      </div>
      
      <div class="submit">
        <button>Sign In</button>
      
        <span class="button-alternative">or <strong class="js-modal-close">Cancel</strong></span>
      
      </div>
    </form>
  
    <div class="modal-screen js-modal-close"></div>
  </div>




<script>
$(function(){

  $("body").on("click", ".js-modal-open", function(event){
    event.preventDefault();
    $(".modal").addClass("is-open");
  });

  $("body").on("click", ".js-modal-close", function(event){
    event.preventDefault();
    $(".modal").removeClass("is-open");
  });

});
</script>












