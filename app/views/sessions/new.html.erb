<%= render "layouts/errors" %>

<form class="users-form" action="<%= session_url %>" method="post">
  <%= auth_token_input %>

  <label>
    <span>Username</span>
    <input type="text" name="user[username]" value="">
  </label>

  <label>
    <span>Password</span>
    <input type="password" name="user[password]" value="">
  </label>

  <input class="sign-in-button" type="submit" value="Sign In">
</form>
