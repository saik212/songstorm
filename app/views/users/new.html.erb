<%= render "layouts/errors" %>

<form class="users-form" action="<%= users_url %>" method="post" enctype="multipart/form-data">
  <%= auth_token_input %>
  <label class="user-label">
    <span>Username</span>
    <input type="text" name="user[username]" value="">
  </label>

  <label class="user-label">
    <span>Password</span>
    <input type="password" name="user[password]" value="">
  </label>

  <label class="image-label">
  <span>Image</span>
  <input type="file" name="user[image]" id="input-post-image">
</label>


  <input class="sign-up-button" type="submit" value="Sign Up">
</form>
