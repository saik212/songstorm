<span class="close-modal-header group">
	<h1>Songstorm</h1>
	<span class="close-btn">&times;</span>
</span>

<h1 class="form-welcome">Upload a song</h1>

<form class="modal-form" enctype="multipart/form-data">
	<div class="input-wrapper">

		<label>Title<span class="req-star">*</span>: </label>
		<input type="text" name="song[title]" value="<%= model.escape('title') %>"><br>

		<label>Artist<span class="req-star">*</span>: </label>
		<input type="text" name="song[artist]" value="<%= model.escape('artist') %>"><br>

		<label>Album: </label>
		<input type="text" name="song[album]" value="<%= model.escape('album') %>"><br>

		<label>Song Image: </label>
		<input type="file" name="song[image]" class="file-upld" id="file-img"><br>

		<label>Song File<span class="req-star">*</span>: </label>
		<input type="file" name="song[audio]" class="file-upld" id="file-sg">

	</div>
</form>

<div class="submit">
	<span class="submit-btn site-btn" id="upld-sg">Upload</span>
</div>
<h1 class="req-star" id="req-field">*required field</h1>